<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant:ital,wght@0,300..700;1,300..700&family=Crimson+Pro:ital,wght@0,200..900;1,200..900&family=Crimson+Text:ital,wght@0,400;0,600;0,700;1,400;1,600;1,700&family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&family=Macondo&family=Marcellus&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <script
      src="https://kit.fontawesome.com/3f167df4c7.js"
      crossorigin="anonymous"
    ></script>

    <style>
      body {
        background-color: #222;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        font-family: "Cormorant", serif;
      }

      .card {
        background-color: #000;
        border-radius: 25px;
        max-width: 450px;
        width: 100%;
        padding: 30px;
        border: none;
      }

      .logo {
        margin-bottom: 20px;
      }

      .logo img {
        width: 90px;
      }

      h1,
      h3 {
        color: white;
        font-weight: bold;
        font-size: 30px;
        font-family: "Marcellus", serif;
      }
      .subtitle {
        color: white;
        margin-bottom: 30px;
        font-size: 26px;
      }
      .form-input {
        background-color: #1f1f1f;
        border: none;
        color: white !important;
        width: 100%;
        border-radius: 10px;
        height: 45px;
        padding-left: 10px;
        font-size: 13px;
        font-family: "poppins", serif;
      }
      .form-input:focus {
        background-color: #444;
        color: white;
        box-shadow: none;
      }

      .card-headerr img {
        width: 90px;
      }

      .loginBtn{
        width: 50px;
        height: 50px;
        background: white;
        color: black;
        border-radius: 50%;
      }
    </style>
  </head>
  <body>
    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="card shadow">
            <div class="card-headerr">
              <img
                src="https://i.ibb.co/v6KJ4XXJ/Untitled-design.png"
                alt="logo"
              />
            </div>
            <div class="form-header">
              <p class="subtitle">Please Validate to Continue</p>
            </div>
            <div class="card-bodyy">
              <% if (typeof error !== 'undefined') { %>
              <div class="alert alert-danger" role="alert"><%= error %></div>
              <% } %> <% if (typeof registered !== 'undefined' && registered ===
              'true') { %>
              <div class="alert alert-success" role="alert">
                Registration successful! Please login with your credentials.
              </div>
              <% } %>

              <form action="/login" method="POST">
                <div class="mb-3">
                  <!-- <label for="email" class="form-label text-white">Email</label> -->
                  <input
                    type="email"
                    class="form-input"
                    id="email"
                    name="email"
                    placeholder="Email"
                    required
                  />
                </div>
                <div class="mb-3">
                  <!-- <label for="password" class="form-label text-white"
                    >Password</label
                  > -->
                  <input
                    type="password"
                    class="form-input"
                    id="password"
                    name="password"
                    placeholder="Password"
                    required
                  />
                </div>
                <div class="d-grid gap-2">
                  <button type="submit" class="loginBtn">
                    <b><i class="fa-solid fa-arrow-right"></i></b>
                  </button>
                </div>
              </form>

              <div class="mt-4 text-center" style="font-size: 20px; color: white">
                <p>Don't have an account? <a href="/">Register</a></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      // Check for 'registered' parameter in the URL
      document.addEventListener("DOMContentLoaded", function () {
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get("registered") === "true") {
          const alertDiv = document.createElement("div");
          alertDiv.className = "alert alert-success";
          alertDiv.role = "alert";
          alertDiv.textContent =
            "Registration successful! Please login with your credentials.";

          const cardBody = document.querySelector(".card-body");
          cardBody.insertBefore(alertDiv, cardBody.firstChild);
        }
      });
    </script>
  </body>
</html>
